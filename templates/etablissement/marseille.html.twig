{% extends 'base.html.twig' %}

{% block contenu %}

    <h1 class="text-center">{{etablissement.name}} </h1> <hr>

    {{ etablissement.description}} <hr>

    <p class="text-decoration-underline">L'espace détente en une photo : </p>
    <img src="{{ asset('images/salle_detente.jpg') }}" class="img-fluid">

    <hr>



    <p class="text-decoration-underline" > L'espace salle à manger en une photo : </p>
    <img src="{{ asset('images/salle_manger.jpg') }}" class="img-fluid">

    <hr><br><br>
    Les suites présentes dans notre hotel sont les suivantes : <br><br><br><br><hr>

    {% for suite in suites %}

        <h3 class="display-6 text-center text-decoration-underline">{{ suite.title }} </h3><br><br>

        <p class="text-center">{{ suite.description }} </p><br><br>

        <p class="display-3">{{ suite.price  }} € </p><br>




        <div class="taillecarrousel">

            <div id="carouselExampleControls{{ loop.index }}" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{ asset('images/'~suite.library[0]~'') }}" class="d-block w-100 img-fluid" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('images/'~suite.library[1]~'') }}" class="d-block w-100 img-fluid" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls{{ loop.index }}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>


        <br>
        <div class="row justify-content-center">
            <a href="{{ path('app_reservation')}}" class="col-6 btn btn-dark"> Réserver </a>
        </div><br><hr>
    {% endfor %}
    <br><br><br>
{% endblock %}